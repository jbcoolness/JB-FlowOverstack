<%= form_for [@question, @question.answers.build] do |f| %>
    
    <div class="form-group">
        <h3>Si usted sabe o conoce de alguien que pueda ayudar con la respuesta, contribuya. Gracias!</h3>
        <%= f.text_area :content, class:"form-control", placeholder: "Escriba su posible respuesta", rows: 5 %>
    </div>
    <div class="actions">
        <%= f.submit 'Enviar', class: "btn btn-primary btn-lg" %>
    </div>
<% end %>