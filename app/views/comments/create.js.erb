<% if @comment.commentable_type == "Answer"%>
    $("<%= escape_javascript(render(@comment)) %>").appendTo('#answer-<%= @comment.commentable_id %> #comments-answers-list');
    $('#answer-<%= @comment.commentable_id %> #content-comment').val('');
<% elsif @comment.commentable_type == "Question"%>
    $("<%= escape_javascript(render(@comment)) %>").appendTo('#question-comments-list');
    $('#content-comment').val('');
<% end %>