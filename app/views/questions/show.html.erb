<div class="container">
    <div class="row">
        <div class="col-2 text-center" >
            <span class="fa fa-thumbs-o-up"></span>
            <br>
            <span>0</span>
            <br>
            <span class="fa fa-thumbs-o-down"></span>
        </div>
        <div class="col-10">
            <h1><%= @question.title %></h1>
            <span> <%= @question.content %></span>
            <hr>
        </div>
        <hr>
        <%= render 'answers/form' %>
    </div>
    <hr>
    <div class="row">
        <h2>Respuestas</h2> 
    </div>
    <div>
        <% @question.answers.each do |answer|%>
            <div class="col-2 text-center ">
                <span class="fa fa-thumbs-o-up"></span>
                <br>
                <span>0</span>
                <br>
                <span class="fa fa-thumbs-o-down"></span>
            </div>

            <div class="col-10 text-center text-align-item" >
                <label for=""><%= answer.content %></label> <br>
            </div>
        <% end %>
    </div>    
</div>