<div class="container">
    <div class="row">
        <div class="col">
            <h1><%= @question.title %></h1>
        </div>
    </div>
    <div class="row mb-5">
        <div class="col-2 text-center" >
            <span class="fa fa-thumbs-o-up"></span>
            <br>
            <span>0</span>
            <br>
            <span class="fa fa-thumbs-o-down"></span>
        </div>
        <div class="col-10">
            <div class="question">
                <span> <%= @question.content %></span>
                
            </div>
            <hr>
            <div class="mb-5 comentarios">
                    <h5>Aqui van los comentarios</h5>
                    <h5>Aqui otro comentarios</h5>
                    <h5>Otro mas, me parece genial</h5>
            </div>

            <div class="form-group">                    
                    <textarea class="form-control" name="comments" id="" cols="30" rows="2" placeholder="Escriba su comentario al respecto"></textarea>
                </div>
            <div class="actions">
                    <button class="btn btn-primary btn-sm"> Comentar</button> 
            </div>
        </div>
        
    </div>
    
    <div class="row">
        <div class="col-12 mb-5">
            <h2>Respuestas (<span id="count-answers"><%= @question.answers.count()%></span>)</h2> 
            <hr>
            <%= render 'answers/form'%>
        </div>
    </div>
    <div class="row" id="answers-list">
            <%= render @question.answers %>
    </div>    
</div>